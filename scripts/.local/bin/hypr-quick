#!/usr/bin/env bash

###########################################
### HYPRLAND QUICK ACTIONS SCRIPT     ###
###########################################

# Script com a√ß√µes r√°pidas para o Hyprland
# Uso: hypr-quick [action]

show_help() {
    cat << EOF
üöÄ Hyprland Quick Actions

Uso: $(basename "$0") [ACTION]

ACTIONS:
    reload          Recarregar configura√ß√£o do Hyprland
    restart-bar     Reiniciar Waybar
    screenshot      Fazer screenshot com Flameshot
    wallpaper       Trocar wallpaper aleat√≥rio
    wallpaper-auto  Iniciar auto-troca de wallpapers
    wallpaper-stop  Parar auto-troca de wallpapers
    monitor-info    Mostrar informa√ß√µes dos monitores
    workspaces      Listar workspaces ativos
    kill-app        Matar aplica√ß√£o ativa
    help            Mostrar esta ajuda

EXEMPLOS:
    $(basename "$0") reload
    $(basename "$0") screenshot
    $(basename "$0") wallpaper

EOF
}

case "$1" in
    "reload")
        echo "üîÑ Recarregando Hyprland..."
        hyprctl reload
        ;;
    "restart-bar")
        echo "üìä Reiniciando Waybar..."
        killall waybar 2>/dev/null
        waybar &
        ;;
    "screenshot")
        echo "üì∏ Abrindo Flameshot..."
        flameshot gui
        ;;
    "wallpaper")
        echo "üé® Trocando wallpaper..."
        ~/.config/hypr/scripts/change_wallpapers.sh -r
        ;;
    "wallpaper-auto")
        echo "‚è∞ Iniciando auto-troca de wallpapers..."
        ~/.config/hypr/scripts/auto_wallpaper.sh
        ;;
    "wallpaper-stop")
        echo "‚èπÔ∏è Parando auto-troca de wallpapers..."
        ~/.config/hypr/scripts/auto_wallpaper.sh -s
        ;;
    "monitor-info")
        echo "üñ•Ô∏è Informa√ß√µes dos monitores:"
        hyprctl monitors
        ;;
    "workspaces")
        echo "üè† Workspaces ativos:"
        hyprctl workspaces
        ;;
    "kill-app")
        echo "‚ùå Matando aplica√ß√£o ativa..."
        hyprctl dispatch killactive
        ;;
    "help"|"-h"|"--help"|"")
        show_help
        ;;
    *)
        echo "‚ùå A√ß√£o desconhecida: $1"
        echo "üí° Use 'help' para ver a√ß√µes dispon√≠veis"
        exit 1
        ;;
esac
